    <div class="container">
        <h1>Order Tracking</h1>
        
        <div class="tracking-form">
            <input type="text" id="orderID" placeholder="Enter Order ID">
            <button onclick="trackOrder()">Track Order</button>
        </div>

        <div id="map"></div>

        <div class="status-container">
            <div class="status-box">
                <h2>GPS Tracking</h2>
                <table>
                    <tr>
                        <th>Metric</th>
